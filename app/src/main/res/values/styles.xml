<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/Gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/Black</item>
        <item name="android:editTextColor">@color/Black</item>
        <item name="android:colorBackground">@color/titleBackground</item>
    </style>

    <!-- Settings theme. -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/settingsActivityBackground</item>
        <item name="android:windowBackground">@color/settingsActivityBackground</item>
    </style>

    <!-- Game theme. -->
    <style name="GameTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/gameActivityBackground</item>
        <item name="android:windowBackground">@color/gameActivityBackground</item>
        <item name="colorAccent">#114208</item>
    </style>

    <!-- Instruction theme. -->
    <style name="InstructionTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/instructionActivityBackground</item>
        <item name="android:windowBackground">@color/instructionActivityBackground</item>
    </style>

    <!-- Score theme. -->
    <style name="ScoreTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/scoreActivityBackground</item>
        <item name="android:windowBackground">@color/scoreActivityBackground</item>
    </style>

    <!-- Credits theme. -->
    <style name="CreditTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/creditActivityBackground</item>
        <item name="android:windowBackground">@color/creditActivityBackground</item>
    </style>

    <style name="smallRoundButton" >
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/LightCyan</item>
    </style>

    <style name="titleShadowEffect">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:shadowColor">@color/Gray</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="mainMenuButton" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:typeface">normal</item>
    </style>




</resources>
