<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.maarti.guessthenumber.MainMenuActivity">

    <!-- TODO remplacer le titre de l'appli par une image-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/appMainMenuTitle"
        android:id="@+id/textViewAppTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="left"
        android:shadowColor="@color/Cyan"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textSize="40sp"
        android:textColor="@color/DarkCyan"
        android:maxLines="2"
        android:lineSpacingExtra="-18sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ediTextName"
        android:layout_below="@id/textViewAppTitle"
        android:hint="@string/yourName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:inputType="textPersonName|textNoSuggestions"
        android:textSize="15sp"
        android:ems="10"
        android:maxLength="20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quickGame"
        android:id="@+id/buttonQuickGame"
        android:onClick="onClickQuickGame"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ediTextName"/>



