        android:layout_marginBottom="10dp" /> -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores"
        android:id="@+id/buttonScores"
        android:layout_below="@+id/buttonQuickGame"
        android:layout_centerHorizontal="true"
        android:onClick="onClickScores"
        android:layout_marginBottom="10dp" />

    <!-- TODO Insctructions -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/buttonInstructions"
        android:layout_below="@+id/buttonScores"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credits"
        android:id="@+id/buttonCredits"
        android:layout_below="@+id/buttonInstructions"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCredits"
        android:layout_marginBottom="10dp" />
